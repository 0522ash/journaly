<!DOCTYPE html>
<html>
  <head>
    <title>Journaly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav_left">
            <%= link_to image_tag("journaly.png", class: :logo), root_path %>
          </div>
          <% if user_signed_in? %>
            <div class="nav_right">
                      こんにちは、
              <%= link_to "#{current_user.username}さん", "#", class: :greeting_link%>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav_logout %>
              <%= link_to "情報をシェアする", new_post_path, class: :nav_btn %>
            </div>
          <% else %>
            <div class="nav_right">
              <%= link_to "ログイン", new_user_session_path, class: :nav_btn %>
              <%= link_to "新規登録", new_user_registration_path, class: :nav_btn %>
            </div>
          <% end %>
          <div class="nav_right">
          <% unless current_page?(root_path) %>
            <%= link_to "トップページに戻る", root_path, class: :nav_btn %>
          <% end %>
          </div>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
    </footer>
  </body>
</html>
